{
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "/{{.*}}/m",
        "/令和.?年度補正予算/",
        "障害者差別解消法",
        "特別支援教育課",
        "就学前教育支援",
        "特異的読字障害",
        "文部科学省調査",
        "東京都教育委員会"
      ]
    }
  },
  "rules": {
    "preset-ja-technical-writing": {
      "max-kanji-continuous-len": {
        max: 8,
        allow: [
          "人類史上最高"
        ]
      },
      "ja-no-successive-word": {
        allow: [
          "代わる"
        ]
      },
      "no-mix-dearu-desumasu": false,
      "max-ten": {
          "max" : 5
      },
      "ja-no-mixed-period": {
        "allowPeriodMarks": ["："],
      },
    },
    "max-kanji-continuous-len": false,
    "preset-jtf-style": {
      "1.1.1.本文": false
    },
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    }
  },
}